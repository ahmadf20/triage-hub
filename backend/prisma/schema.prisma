generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id            String   @id @default(uuid())
  content       String
  customerEmail String?
  status        Status   @default(PENDING)
  category      Category?
  sentiment     Int?
  urgency       Urgency?
  aiDraft       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum Status {
  PENDING
  PROCESSED
  RESOLVED
  FAILED
}

enum Category {
  BILLING
  TECHNICAL
  FEATURE_REQUEST
}

enum Urgency {
  HIGH
  MEDIUM
  LOW
}
